---
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang)

const cards = [
  {
    step: '01',
    name: 'home.community_initiative_title',
    description: 'home.community_initiative_content',
  },
  {
    step: '02',
    name: 'home.community_mission_title',
    description: 'home.community_mission_content',
  },
  {
    step: '03',
    name: 'home.community_participate_title',
    description: 'home.community_participate_content',
  },
];
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-12 sm:gap-16">
      <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">{t('home.community_title')}</h2>
      <div class="grid gap-8 lg:grid-cols-3">
        {
          cards.map((card) => (
            <div class="bg-primary-500/10 dark:bg-primary-400/60 flex flex-col gap-12 rounded-lg px-6 py-8">
              <div class="flex flex-col gap-4">
                <h3 class="text-xl font-medium">{t(card.name)}</h3>
                <p class="text-primary-950/70 dark:text-primary-50/70 text-base sm:text-lg">
                  {t(card.description)}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
