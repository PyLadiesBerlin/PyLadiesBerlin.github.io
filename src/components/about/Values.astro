---
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang)

const values = [
  [
    {
      ref: '01',
      name: 'values.excellence_title',
      description: 'values.excellence',
    },
    {
      ref: '02',
      name: 'values.innovation_title',
      description: 'values.innovation',
    },
  ],
  [
    {
      ref: '03',
      name: 'values.teamwork_title',
      description: 'values.teamwork',
    },
    {
      ref: '04',
      name: 'values.respect_title',
      description: 'values.respect',
    },
  ],
];
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-8 lg:gap-12">
      <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">{t("about.values_title")}</h2>
      <div class="grid gap-8 lg:grid-cols-2">
        {
          values.map((column, index) => (
            <div class:list={['space-y-8', index === 1 && 'lg:mt-16']}>
              {column.map((value) => (
                <div class="bg-primary-500/10 dark:bg-primary-400/10 flex flex-col gap-12 rounded-3xl px-6 py-8">
                  <h2 class="text-sm">{value.ref}</h2>
                  <div class="flex flex-col gap-4">
                    <h3 class="text-xl font-medium">{t(value.name)}</h3>
                    <p class="text-primary-950/70 dark:text-primary-200/70 text-base sm:text-lg">
                      {t(value.description)}
                    </p>
                  </div>
                </div>
              ))}
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
